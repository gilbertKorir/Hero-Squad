{{#partial "content"}}
    <h1 class="text-center pt-4 pb-5">My Squads</h1>
    <hr>
    <div class="row">
        <div class="col-md-12 hero">
            {{#if squads}}
                {{#each squads}}
                    <div class="card text-dark pt-3 mb-3" style="width:23rem;">
                        <div class = "card-body">
                            <h3 class="card-title">Squad name: {{name}}</h3>
                            <hr>
                            <p class="card-text">Max size: {{maxsize}}</p>
                            <p class="card-text">Cause: {{cause}}</p>
                            {{#each squads.heroes}}
                                <hr>
                                <li class="card-text">{{name}}</li><br>
                                <hr>
                                <p class="card-text">Age : {{age}}</p><br>
                                <p class="card-text">Special Powers : {{powers}}</p><br>
                                <p class="card-text">Weakness: {{weakness}}</p><br>
                                <p class="card-text">Defence : {{defence}}</p><br>
                                <p class="card-text">Attack : {{attack}}</p><br>
                                <a href="/squads/{{id}}"><button class="btn btn-info btn-md">Delete</button></a><br><br><hr>
                            {{/each}}
                        </div>
                {{/each}}
            {{/if}}
{{else}}
    <h3>Just create at least one squad</h3>
        </div>
    </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            {{#if squad}}
                <div class="card  text-dark">

                    <div class="card-body">
                        <h4 class="card-title text-danger">Warning</h4>
                        <hr>
                        <p class="card-text">Are you sure you want to delete {{squad.name}}, OK if you delete this hero you will not be able to recover it!</p><br>
                        <a href="/squad/{{squad.id}}/delete"><button class="btn btn-danger">Delete Squad</button></a>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>

{{/partial}}
{{#partial "footer"}}
    {{#if squads}}
        <a href="/squads/delete"><button class="btn btn-lg btn-danger"> Delete All Squads</button></a>
    {{else}}
    {{/if}}
{{/partial}}

{{>layout.hbs}}