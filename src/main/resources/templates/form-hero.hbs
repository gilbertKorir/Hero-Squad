{{#partial "content"}}
<form action="/heroes/new" method="post">
    <h4>Create a new Hero...</h4>
    <hr>
    <label for="name">Name</label>
    <input type="text" name="name" id="name"><br>
    <label for="age">Age</label>
    <input type="number" name="age" id="age" min="1"><br>
    <label for="powers">Powers</label>
    <input type="text" name="powers" id="powers"><br>
    <label for="weakness">Weaknesses</label>
    <input type="text" name="weakness" id="weakness"><br>

    <button type="submit" class="btn btn-primary">create !</button>
</form>
{{/partial}}
{{>layout.hbs}}